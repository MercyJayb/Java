    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        Save();
        DBConnect();
        
    }                                        
private void Save() {
        String houseno=jTextField1.getText();
        String description=jTextField2.getText();
        String rent=jTextField3.getText();
         String deposit=jTextField4.getText();
        String status=jTextField5.getText();
               if(!jTextField1.getText().isEmpty())
        
  try{
        
        
        con=DriverManager.getConnection(url,user,password);
        stmt=con.createStatement();
       String data="Insert into houses values(?,?,?,?,?)";
        java.sql.PreparedStatement ps=con.prepareStatement(data);
        ps.setString(1, houseno);
        ps.setString(2, description);
        ps.setString(3, rent);
        ps.setString(4, deposit);
        ps.setString(5, status);
      


         int numRowsChanged = ps.executeUpdate();
         
         JOptionPane.showMessageDialog(AddHouse.this,"House added");

  }

 
   

   catch(SQLException error)
    {
               JOptionPane.showMessageDialog(AddHouse.this,"House not added");
//System.out.println("error is"+error.getMessage());
    
    
    }
}
