private void Save() {
        String firstname=jTextField1.getText();
        String secondname=jTextField2.getText();
        String phoneno=jTextField3.getText();
         String id=jTextField4.getText();
        String dateadmitted=jTextField5.getText();
        String houseno=jTextField6.getText();
        if(!jTextField1.getText().isEmpty())
        
  try{
        
        
        con=DriverManager.getConnection(url,user,password);
        stmt=con.createStatement();
       String data="Insert into tenants values(?,?,?,?,?,?)";
        java.sql.PreparedStatement ps=con.prepareStatement(data);
        ps.setString(1, firstname);
        ps.setString(2, secondname);
        ps.setString(3, phoneno);
        ps.setString(4, id);
        ps.setString(5, dateadmitted);
        ps.setString(6, houseno);


         int numRowsChanged = ps.executeUpdate();
         
         JOptionPane.showMessageDialog(AddTenant.this,"Tenant added");

  }

 
   

   catch(SQLException error)
    {
               JOptionPane.showMessageDialog(AddTenant.this,"Tenant not added");

    
    
    }
}

