    private void Save() {
        String id=jTextField1.getText();
        String amountdue=jTextField2.getText();
        String amountpaid=jTextField3.getText();
        
        if(!jTextField1.getText().isEmpty())
        
  try{
        
        con=DriverManager.getConnection(url,user,password);
        stmt=con.createStatement();
        //stmt=con.createStatement();
       String data="Insert into payment values(?,?,?)";
        java.sql.PreparedStatement ps=con.prepareStatement(data);
        ps.setString(1, id);
        ps.setString(2, amountdue);
        ps.setString(3, amountpaid);
        


         int numRowsChanged = ps.executeUpdate();


JOptionPane.showMessageDialog(AddPayment.this,"Payment added");

   }
   

   catch(SQLException error)
    {
               JOptionPane.showMessageDialog(AddPayment.this,"Payment not added");


    }
    }
